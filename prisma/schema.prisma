// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          Int              @id @default(autoincrement())
  title       String
  description String?
  units       Int
  offered     QuarterOffered[]
}

model QuarterOffered {
  id         Int      @id @default(autoincrement())
  quarter    String
  professors String[]
  Course     Course?  @relation(fields: [courseId], references: [id])
  courseId   Int?
}

model Professor {
  id          Int      @id @default(autoincrement())
  name        String
  tags        String[]
  rating      Float
  wouldRepeat Float
  difficulty  Float
  comments    String[]
}
